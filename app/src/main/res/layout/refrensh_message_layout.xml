<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/refresh_message_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/refresh_message_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/refresh"
            android:layout_marginLeft="@dimen/refresh_message_padparentleft"/>

        <TextView
            android:id="@+id/refresh_message_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/refresh_message_module_distance"
            android:textSize="18sp"
            android:hint="@string/time_hint"/>

        </LinearLayout>

    <TextView
        android:id="@+id/refresh_message_tough_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/refresh_message_padparentleft"
        android:textSize="18sp"
        android:hint="@string/updated_hint"/>

</LinearLayout>
